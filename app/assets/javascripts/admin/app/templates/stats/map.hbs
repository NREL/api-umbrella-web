{{view Admin.StatsQueryFormView}}

<div id="map_container">
  {{#each breadcrumbs}}
    {{#if linkQuery}}
      {{#link-to 'stats.map' linkQuery}}{{name}}{{/link-to}} /
    {{else}}
      {{name}}
    {{/if}}
  {{/each}}

  {{view Admin.StatsMapGeoView modelBinding='model'}}
</div>

<div id="results_table">
  {{view Admin.StatsMapTableView modelBinding='model'}}
</div>
<div class="results-table-actions">
  <a {{bind-attr href='downloadUrl'}}>Download CSV</a>
</div>

{{view Admin.LoadingOverlayView isLoadingBinding='controllers.application.isLoading'}}
