<table id="sub_settings_table" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th style="width: 110px;">HTTP Method</th>
      <th>URL Matcher</th>
      <th class="reorder-handle"></th>
    </tr>
  </thead>
  <tbody>
    {{#if model}}
      {{#each}}
        <tr data-id="{{unbound id}}">
          <td>{{httpMethod}}</td>
          <td>{{regex}}</td>
          <td class="table-row-actions" style="width: 90px; white-space: nowrap;">
            <a href="#" {{action 'editSubSettings' this}}><i class="fa fa-pencil"></i>Edit</a>
            <a href="#" class="remove-action" {{action 'deleteSubSettings' this}}><i class="fa fa-times"></i>Remove</a>
          </td>
          <td class="reorder-handle"><i class="fa fa-reorder"></i></td>
        </tr>
      {{/each}}
    {{else}}
      <tr class="empty"><td colspan="3">No sub-URL request settings have been added yet. Click "Add URL Settings" below to get started.</td></tr>
    {{/if}}
  </tbody>
</table>
<div class="row-fluid">
  <div class="span6">
    <button type="button" class="btn btn-mini" {{action 'addSubSettings'}}><i class="fa fa-plus-circle"></i> Add URL Settings</button>
  </div>
  <div class="span6 text-right">
    {{#if reorderable}}
      <button type="button" class="btn btn-mini" {{action 'reorderSubSettings'}}><i class="fa fa-reorder"></i> <span class="reorder-button-text">Reorder</span></button>
    {{/if}}
  </div>
</div>
