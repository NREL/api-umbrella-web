<div id="url_matches">
  <table id="url_matches_table" class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Frontend Prefix</th>
        <th>Backend Prefix</th>
        <th></th>
        <th class="reorder-handle"></th>
      </tr>
    </thead>
    <tbody>
      {{#if model}}
        {{#each}}
          <tr data-id="{{unbound id}}">
            <td>{{frontendPrefix}}</td>
            <td>{{backendPrefixWithDefault}}</td>
            <td class="table-row-actions" style="width: 90px; white-space: nowrap;">
              <a href="#" {{action 'editUrlMatch' this}}><i class="fa fa-pencil"></i>{{t 'admin.edit'}}</a>
              <a href="#" class="remove-action" {{action 'deleteUrlMatch' this}}><i class="fa fa-times"></i>{{t 'admin.remove'}}</a>
            </td>
            <td class="reorder-handle"><i class="fa fa-reorder"></i></td>
          </tr>
        {{/each}}
      {{else}}
        <tr class="empty"><td colspan="4">{{t 'admin.api.url_matches.empty_list' add=(t 'admin.api.url_matches.add')}}</td></tr>
      {{/if}}
    </tbody>
  </table>
  <div class="row-fluid">
    <div class="span6">
      <button type="button" class="btn btn-mini" {{action 'addUrlMatch'}}><i class="fa fa-plus-circle"></i> {{t 'admin.api.url_matches.add'}}</button>
    </div>
    <div class="span6 text-right">
      {{#if reorderable}}
        <button type="button" id="url_matches_reorder" class="btn btn-mini" {{action 'reorderUrlMatches'}}><i class="fa fa-reorder"></i> <span class="reorder-button-text">{{t admin.reorder}}</span></button>
      {{/if}}
    </div>
  </div>
</div>
