{{#form-for model}}
  <div class="modal-body">
    <div class="row-fluid">
      <div class="span10">
        {{input host
          placeholder='api.example.com'
          inputConfig='class:span12'}}
      </div>
      <div class="span2">
        {{input port inputConfig='class:span12'}}
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn" {{action 'cancel'}}>Cancel</button>
    <button type="submit" class="btn btn-primary" {{action 'ok'}}>OK</button>
  </div>
{{/form-for}}
