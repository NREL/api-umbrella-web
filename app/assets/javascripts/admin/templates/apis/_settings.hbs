{{#with settings}}
  {{input requireHttps as='select'
    value='requireHttps'
    label='HTTPS Requirements'
    collection='controller.controllers.apis_settings_fields.requireHttpsOptions'
    optionValuePath='content.id'
    optionLabelPath='content.name'}}
  {{input disableApiKey as='select'
    value='disableApiKey'
    label='API Key Checks'
    collection='controller.controllers.apis_settings_fields.disableApiKeyOptions'
    optionValuePath='content.id'
    optionLabelPath='content.name'}}
  {{input requiredRoles
    class='row-fluid'
    label='Required Roles'
    inputConfig='class:span12'}}
  {{input hourlyRateLimit
    class='row-fluid'
    label='Rate Limit'
    inputConfig='class:span12'}}
{{/with}}
