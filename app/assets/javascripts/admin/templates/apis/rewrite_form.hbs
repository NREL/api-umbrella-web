{{#form-for model}}
  <div class="modal-body">
    {{input matcherType as='select'
      value='matcherType'
      collection='matcherTypeOptions'
      optionValuePath='content.id'
      optionLabelPath='content.name'}}

    <div class="row-fluid">
      {{input httpMethod as='select'
        value='httpMethod'
        class='span2'
        collection='httpMethodOptions'
        optionValuePath='content.id'
        optionLabelPath='content.name'
        inputConfig='class:span12'}}
      {{input frontendMatcher
        class='span10'
        placeholder='/example'
        inputConfig='class:span12'}}
    </div>

    <div class="row-fluid arrow arrow-vertical">
      <i class="icon-arrow-down icon-2x"></i> rewrite to
    </div>

    <div class="row-fluid">
      {{input backendReplacement
        class='span10 offset2'
        placeholder='/example'
        inputConfig='class:span12'}}
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn" {{action cancel}}>Cancel</button>
    <button type="submit" class="btn btn-primary" {{action ok}}>OK</button>
  </div>
{{/form-for}}
