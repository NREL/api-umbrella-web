<div id="url_matches">
  {{#if model}}
    <table id="url_matches" class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Frontend Prefix</th>
          <th>Backend Prefix</th>
          <th></th>
          <th class="reorder-handle"></th>
        </tr>
      </thead>
      <tbody>
        {{#each}}
          <tr data-id="{{unbound id}}">
            <td>{{frontendPrefix}}</td>
            <td>{{backendPrefixWithDefault}}</td>
            <td class="table-row-actions" style="width: 90px; white-space: nowrap;">
              <a href="#" {{action 'editUrlMatch' this}}><i class="icon-pencil"></i>Edit</a>
              <a href="#" class="remove-action" {{action 'deleteUrlMatch' this}}><i class="icon-remove"></i>Remove</a>
            </td>
            <td class="reorder-handle"><i class="icon-reorder"></i></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
  <div class="row-fluid">
    <div class="span6">
      <button type="button" class="btn btn-mini" {{action 'addUrlMatch'}}><i class="icon-plus-sign"></i> Add URL Prefix</button>
    </div>
    <div class="span6 text-right">
      {{#if reorderable}}
        <button type="button" id="url_matches_reorder" class="btn btn-mini" {{action 'reorderUrlMatches'}}><i class="icon-reorder"></i> <span class="reorder-button-text">Reorder</span></button>
      {{/if}}
    </div>
  </div>
</div>
