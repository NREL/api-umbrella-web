<div id="content" class="grid_12">

<h1><%= @service.title %></h1>
<div class="doc-summary">
  <%= simple_format(@service.summary) %>
</div>

<div class="row-fluid">
  <div class="toc">
    <ul id="toc"></ul>
  </div>
</div>

<%= render_service_body(@service) %>

<%= javascript_tag do %>
  $('#toc').tableOfContents(document.body, {
    startLevel: 2,
    depth: 2
  });
<% end %>

<div id="disqus_thread">
</div>
<script type="text/javascript">
  /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
  var disqus_shortname = "devdev-nrel";
  <% if(Rails.env != "production") %>
  var disqus_developer = 1;
  <% end %>
  var disqus_identifier = "<%= @service.url_path %>";
  var disqus_url = "http://developer.nrel.gov<%= @service.url_path %>";

  /* * * DON'T EDIT BELOW THIS LINE * * */
  (function() {
    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
    dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
  })();
</script>
<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>

</div>
